.row
  .col-md-12
    .jumbotron
      %h1 Mоделювання Монте Карло
      .btn-group
        = link_to "Лінійний графік", root_path, data: { no_turbolink: true }, class: "btn btn-default"
        = link_to "3D графік", example_path, data: { no_turbolink: true }, class: "btn btn-default"
    .col-md-4
      %h4
        Введіть дані:
      .form
        .input-group
          %label
            Значення 1
          %input.form-control#param1{:placeholder => "Параметр 1", :type => "number"}
        %hr
        .input-group
          %label
            Значення 2
          %input.form-control#param2{:placeholder => "Параметр 2", :type => "number"}
        %hr
        .input-group
          %label
            Значення 3
          %input.form-control#param3{:placeholder => "Параметр 3", :type => "number"}
        %br
        %button.btn.btn-primary#calc{:type => "button"}
          Розрахувати
    .col-md-8
      %h4
        Лінійний графік
      #line-chart